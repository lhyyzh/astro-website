---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title} >
    <p>发布时间：{frontmatter.pubDate.toLocaleDateString()}</p>
    <p>作者：{frontmatter.author}</p>
    <p>描述：{frontmatter.description}</p>
    <slot />
    <div class="tags">
        {frontmatter.tags.map((tag: string) => <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>)}
    </div>
    <img src={frontmatter.image.url} alt={frontmatter.image.alt} width="300"/>
    
    <a href={frontmatter.returnUrl}>返回博客首页</a>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
