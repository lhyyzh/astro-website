---
import BaseLayout from '../../layouts/BaseLayout.astro';

const allTags = Object.values(import.meta.glob('../posts/*.md', { eager: true }));
const tags = [...new Set( allTags.map( (tag) => (tag as any).frontmatter.tags).flat() )]
const pageTitle = "标签索引";
---

</style>
<BaseLayout pageTitle={pageTitle}>
  <ul>
    <div class="tags">
      {tags.map((tag) => <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>)}
    </div>
  </ul>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }